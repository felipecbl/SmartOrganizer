  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync to Hassio",
      "type": "shell",
      "command": "rsync -vahP --exclude-from='/Users/felipe/Library/Mobile Documents/com~apple~CloudDocs/Programming/home assistant/SmartOrganizer/blacklist.txt' '/Users/felipe/Library/Mobile Documents/com~apple~CloudDocs/Programming/home assistant/SmartOrganizer/' '/Volumes/addons/local/hassio-addon-smart-organizer'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "revealProblems": "onProblem",
        "close": true
      },
    },
    // sync dockerfile
    {
      "label": "Sync Dockerfile to Hassio",
      "type": "shell",
      "command": "rsync -aE '/Users/felipe/Library/Mobile Documents/com~apple~CloudDocs/Programming/home assistant/SmartOrganizer/Dockerfile' '/Volumes/addons/local/hassio-addon-smart-organizer'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
    },
    // sync config.json
    {
      "label": "Sync config.json to Hassio",
      "type": "shell",
      "command": "rsync -aE '/Users/felipe/Library/Mobile Documents/com~apple~CloudDocs/Programming/home assistant/SmartOrganizer/config.json' '/Volumes/addons/local/hassio-addon-smart-organizer'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
    },
    {
      "label": "Start Home Assistant",
      "type": "shell",
      "command": "supervisor_run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
